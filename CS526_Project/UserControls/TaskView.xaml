<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS526_Project.UserControls.TaskView">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="checkTaskDone" Grid.Column="0" CheckedChanged="checkTaskDone_CheckedChanged"/>

        <Grid x:Name="TaskDetailView" Grid.Column="1">
            <RoundRectangle x:Name="ViewBackground" CornerRadius="10"/>
            <VerticalStackLayout>

                <Grid>
                    <Label x:Name="labelName" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Start"/>
                    <Label x:Name="labelDeadline" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="End"/>
                </Grid>

                <Label x:Name="labelDescription" LineBreakMode="NoWrap"/>

                <HorizontalStackLayout x:Name="CategoriesWrapper"/>

            </VerticalStackLayout>
        </Grid>

    </Grid>
    
</ContentView>
