<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS526_Project.UserControls.TaskView">

    <Grid Margin="0,0,0,10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="checkTaskDone" Grid.Column="0" CheckedChanged="checkTaskDone_CheckedChanged"/>

        <Border x:Name="TaskDetailView" Grid.Column="1" StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>

            <VerticalStackLayout Margin="10,10,10,10">

                <Grid Margin="0,0,0,5">
                    <Label x:Name="labelName" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Start"/>
                    <Label x:Name="labelDeadline" Grid.Column="1" FontAttributes="Bold" HorizontalOptions="End"/>
                </Grid>

                <Label x:Name="labelDescription" LineBreakMode="NoWrap"/>

                <HorizontalStackLayout x:Name="CategoriesWrapper"/>

            </VerticalStackLayout>
        </Border>

    </Grid>
    
</ContentView>
